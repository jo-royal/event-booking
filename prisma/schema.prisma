generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  admin
  staff
  organizer
  user
}

enum Status {
  pending
  paid
  cancelled
  refund
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     Role     @default(user)
  bookings Booking[]
}

model Booking {
  id         Int      @id @default(autoincrement())
  eventId    Int
  userId     Int?     // nullable for guests
  guestEmail String?  // required for guests
  tickets    Int
  total      Float
  status     Status   @default(pending) 
  createdAt  DateTime @default(now())

  user  User?  @relation(fields: [userId], references: [id])
  event Event  @relation(fields: [eventId], references: [id])
}

model Event {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  location    String
  price       Float
  salesPrice Float
  maxTickets  Int
  ticketsCounts Int
  createdAt   DateTime  @default(now())
  bookings    Booking[]
}
